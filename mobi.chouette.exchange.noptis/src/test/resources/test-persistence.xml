<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name="stip" transaction-type="RESOURCE_LOCAL">

        <jta-data-source>java:jboss/datasources/stip</jta-data-source>

        <class>mobi.chouette.exchange.noptis.model.AdvanceOrderCondition</class>
        <class>mobi.chouette.exchange.noptis.model.CallOnTimedJourneyPattern</class>
        <class>mobi.chouette.exchange.noptis.model.ConnectionCandidate</class>
        <class>mobi.chouette.exchange.noptis.model.ConnectionLink</class>
        <class>mobi.chouette.exchange.noptis.model.Contractor</class>
        <class>mobi.chouette.exchange.noptis.model.DataSource</class>
        <class>mobi.chouette.exchange.noptis.model.DatedConnection</class>
        <class>mobi.chouette.exchange.noptis.model.DatedVehicleJourney</class>
        <class>mobi.chouette.exchange.noptis.model.DestinationDisplay</class>
        <class>mobi.chouette.exchange.noptis.model.DestinationPattern</class>
        <class>mobi.chouette.exchange.noptis.model.DirectionOfLine</class>
        <class>mobi.chouette.exchange.noptis.model.JourneyPattern</class>
        <class>mobi.chouette.exchange.noptis.model.JourneyPatternPoint</class>
        <class>mobi.chouette.exchange.noptis.model.Line</class>
        <class>mobi.chouette.exchange.noptis.model.NamedJourneyPattern</class>
        <class>mobi.chouette.exchange.noptis.model.PointInDestinationPattern</class>
        <class>mobi.chouette.exchange.noptis.model.PointInJourneyPattern</class>
        <class>mobi.chouette.exchange.noptis.model.PointOnRouteLink</class>
        <class>mobi.chouette.exchange.noptis.model.RouteLink</class>
        <class>mobi.chouette.exchange.noptis.model.RouteLinkTraversableByTransportMode</class>
        <class>mobi.chouette.exchange.noptis.model.StopArea</class>
        <class>mobi.chouette.exchange.noptis.model.StopPoint</class>
        <class>mobi.chouette.exchange.noptis.model.TimedJourneyPattern</class>
        <class>mobi.chouette.exchange.noptis.model.TransportAuthority</class>
        <class>mobi.chouette.exchange.noptis.model.VehicleJourney</class>
        <class>mobi.chouette.exchange.noptis.model.VehicleJourneyTemplate</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <validation-mode>NONE</validation-mode>

        <!-- Maybe we do not need a separate datasource configuration for this persistence unit
             we could define the jdbc url directly as a property "javax.persistence.jdbc.url" and
             "javax.persistence.jdbc.driver" -->

        <properties>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.jdbc.batch_size" value="100"/>
            <property name="hibernate.default_batch_fetch_size" value="100"/>
            <property name="hibernate.connection.datasource" value="java:jboss/datasources/stip"/>
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.use_query_cache" value="true"/>
            <property name="javax.persistence.validation.mode" value="none"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.default_schema" value="dbo"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
        </properties>

    </persistence-unit>

</persistence>
