<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name="public" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/chouette</jta-data-source>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <validation-mode>NONE</validation-mode>

        <properties>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.jdbc.batch_size" value="100"/>
            <property name="hibernate.default_batch_fetch_size" value="100"/>
            <property name="hibernate.connection.datasource" value="java:jboss/datasources/chouette"/>
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.use_query_cache" value="true"/>
            <property name="javax.persistence.validation.mode" value="none"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.default_schema" value="public"/>
            <property name="hibernate.dialect" value="org.hibernate.spatial.dialect.postgis.PostgisDialect"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="referential" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/chouette</jta-data-source>

        <class>mobi.chouette.model.AccessLink</class>
        <class>mobi.chouette.model.AccessPoint</class>
        <class>mobi.chouette.model.CalendarDay</class>
        <class>mobi.chouette.model.Company</class>
        <class>mobi.chouette.model.ConnectionLink</class>
        <class>mobi.chouette.model.Footnote</class>
        <class>mobi.chouette.model.GroupOfLine</class>
        <class>mobi.chouette.model.JourneyFrequency</class>
        <class>mobi.chouette.model.JourneyPattern</class>
        <class>mobi.chouette.model.Line</class>
        <class>mobi.chouette.model.Period</class>
        <class>mobi.chouette.model.Network</class>
        <class>mobi.chouette.model.Route</class>
        <class>mobi.chouette.model.RouteSection</class>
        <class>mobi.chouette.model.StopArea</class>
        <class>mobi.chouette.model.StopPoint</class>
        <class>mobi.chouette.model.Timeband</class>
        <class>mobi.chouette.model.Timetable</class>
        <class>mobi.chouette.model.VehicleJourneyAtStop</class>
        <class>mobi.chouette.model.VehicleJourney</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <validation-mode>NONE</validation-mode>

        <properties>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.jdbc.batch_size" value="2000"/>
            <property name="hibernate.default_batch_fetch_size" value="2000"/>
            <property name="hibernate.multiTenancy" value="SCHEMA"/>
            <property name="hibernate.connection.datasource" value="java:jboss/datasources/chouette"/>
            <property name="hibernate.tenant_identifier_resolver"
                      value="mobi.chouette.persistence.hibernate.DefaultTenantIdentifierResolver"/>
            <property name="hibernate.multi_tenant_connection_provider"
                      value="mobi.chouette.persistence.hibernate.DefaultConnectionProvider"/>
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.use_query_cache" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.spatial.dialect.postgis.PostgisDialect"/>
            <property name="javax.persistence.validation.mode" value="none"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="stip" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/stip</jta-data-source>

        <class>mobi.chouette.model.stip.AdvanceOrderCondition</class>
        <class>mobi.chouette.model.stip.CallOnTimedJourneyPattern</class>
        <class>mobi.chouette.model.stip.ConnectionCandidate</class>
        <class>mobi.chouette.model.stip.ConnectionLink</class>
        <class>mobi.chouette.model.stip.Contractor</class>
        <class>mobi.chouette.model.stip.DataSource</class>
        <class>mobi.chouette.model.stip.DatedConnection</class>
        <class>mobi.chouette.model.stip.DatedVehicleJourney</class>
        <class>mobi.chouette.model.stip.DestinationDisplay</class>
        <class>mobi.chouette.model.stip.DestinationPattern</class>
        <class>mobi.chouette.model.stip.DirectionOfLine</class>
        <class>mobi.chouette.model.stip.JourneyPattern</class>
        <class>mobi.chouette.model.stip.JourneyPatternPoint</class>
        <class>mobi.chouette.model.stip.Line</class>
        <class>mobi.chouette.model.stip.NamedJourneyPattern</class>
        <class>mobi.chouette.model.stip.PointInDestinationPattern</class>
        <class>mobi.chouette.model.stip.PointInJourneyPattern</class>
        <class>mobi.chouette.model.stip.PointOnRouteLink</class>
        <class>mobi.chouette.model.stip.RouteLink</class>
        <class>mobi.chouette.model.stip.RouteLinkTraversableByTransportMode</class>
        <class>mobi.chouette.model.stip.StopArea</class>
        <class>mobi.chouette.model.stip.StopPoint</class>
        <class>mobi.chouette.model.stip.TimedJourneyPattern</class>
        <class>mobi.chouette.model.stip.TransportAuthority</class>
        <class>mobi.chouette.model.stip.VehicleJourney</class>
        <class>mobi.chouette.model.stip.VehicleJourneyTemplate</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <validation-mode>NONE</validation-mode>

        <properties>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.jdbc.batch_size" value="100"/>
            <property name="hibernate.default_batch_fetch_size" value="100"/>
            <property name="hibernate.connection.datasource" value="java:jboss/datasources/stip"/>
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.use_query_cache" value="true"/>
            <property name="javax.persistence.validation.mode" value="none"/>
            <property name="hibernate.default_schema" value="dbo"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
        </properties>
    </persistence-unit>

